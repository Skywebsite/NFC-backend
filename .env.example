# MongoDB Connection
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/nfc-students

# Or use MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nfc-students

# Cloudinary Configuration (for image uploads)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Server Configuration
PORT=3001

# API Base URL (for React Native app and web-admin)
# For production, update to your deployed server URL:
API_URL=http://localhost:3001
# API_URL=https://your-api-domain.com
